  <p id="notice"></p>
         <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> <strong>error prohibited this book from being saved:</strong></h3>
           <ul>
            <% @book.errors.full_messages.each do |message| %>
             <li>・<%= message %></li>
            <% end %>
            </ul>
       <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">

     <%= render 'users/part', user: current_user %>
      <!-- 部分テンプレート -->
        </div>
    <div class="col-md-8 offset-md-1">
     <h2><strong>Books</strong></h2>
      <table class="table table-hover table-inverse">
       <tr>
        <th></th><th>Title</th><th>Opinion</th></tr>
          <% @books.each do |book| %><!-- ユーザーの投稿一覧 -->
        <tr>
        <td></td>
        <td><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
        </tr>
         <% end %>
       </table>

    </div>
  </div>
</div>