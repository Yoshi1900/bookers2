 <p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px--sm-0 mx-auto">
       <h1>Editing Book</h1>
       <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> <strong>error prohibited this book from being saved:</strong></h3>
           <ul>
            <% @book.errors.full_messages.each do |message| %>
             <li>・<%= message %></li>
            <% end %>
            </ul>
       <% end %>

         <%= form_with model: @book do |f| %>
          <div class="form-group">
           <label>Title</label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
           <label>Opinion</label>
            <%= f.text_area :body, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', style:'background-color: green; color: white;' %>
          </div>
         <% end %>
           <br>
            <div class="box-edit"><!-- このdivいらない？ -->
             <a href="/books/<%= @book.id %>">Show</a>|<a href="/books">Back</a>
            </div>
    </div>
  </div>
</div>
